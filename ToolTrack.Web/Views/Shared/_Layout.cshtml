<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToolTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-white p-3" style="width: 220px; min-height: 100vh;">
            <h4 class="text-center mb-4"><i class="fas fa-tools"></i> ToolTrack</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index"><i class="fas fa-home me-2"></i> Inicio</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Herramientas" asp-action="Index"><i class="fas fa-wrench me-2"></i> Herramientas</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Trabajadors" asp-action="Index"><i class="fas fa-user me-2"></i> Trabajadores</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Prestamoes" asp-action="Index"><i class="fas fa-arrow-right me-2"></i> Préstamos</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Prestamoes" asp-action="Devoluciones"><i class="fas fa-arrow-left me-2"></i> Devoluciones</a>
                </li>
                <li class="nav-item mb-2">  
                    <a class="nav-link text-white" asp-controller="Reportes" asp-action="Index"><i class="fas fa-file-alt me-2"></i> Reportes</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Bot" asp-action="Index"><i class="fas fa-robot me-2"></i> Agente Bot</a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
