@model IEnumerable<ToolTrack.Domain.Entities.Trabajador>

@{
    ViewData["Title"] = "Lista de Trabajadores";
}

<h2 class="mb-4 fw-bold">Lista de Trabajadores</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Registrar Nuevo Trabajador</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Documento</th>
            <th style="width: 150px;">Cargo</th>
            <th style="width: 220px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombres</td>
                <td>@item.Documento</td>
                <td>@item.Cargo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTrabajador" class="text-primary text-decoration-none">Editar</a>
                    |
                    <a asp-action="Details" asp-route-id="@item.IdTrabajador" class="text-info text-decoration-none">Detalles</a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.IdTrabajador" class="text-danger text-decoration-none">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
