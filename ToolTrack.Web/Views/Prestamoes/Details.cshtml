@model ToolTrack.Domain.Entities.Prestamo

@{
    ViewData["Title"] = "Detalle del Préstamo";
}

<h2 class="mb-4 fw-bold">Detalle del Préstamo</h2>

<div class="card shadow-sm" style="max-width: 700px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 fw-bold">Herramienta</dt>
            <dd class="col-sm-8">@($"{Model.Herramienta?.Nombre} ({Model.Herramienta?.CodigoInterno})")</dd>

            <dt class="col-sm-4 fw-bold">Trabajador</dt>
            <dd class="col-sm-8">@($"{Model.Trabajador?.Nombres} ({Model.Trabajador?.Cargo})")</dd>

            <dt class="col-sm-4 fw-bold">Fecha de Préstamo</dt>
            <dd class="col-sm-8">@Model.FechaPrestamo.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4 fw-bold">Fecha de Devolución</dt>
            <dd class="col-sm-8">
                @(Model.FechaDevolucion.HasValue? Model.FechaDevolucion.Value.ToString("dd/MM/yyyy") : "-")
            </dd>

            <dt class="col-sm-4 fw-bold">Estado</dt>
            <dd class="col-sm-8">
                @if (Model.Estado == "Activo")
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.Estado</span>
                }
            </dd>

            <dt class="col-sm-4 fw-bold">Observación</dt>
            <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Observacion) ? Model.Observacion : "-")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.IdPrestamo" class="btn btn-primary me-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">← Volver al listado</a>
</div>
