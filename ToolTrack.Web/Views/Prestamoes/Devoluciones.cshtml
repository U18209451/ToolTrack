@model IEnumerable<ToolTrack.Domain.Entities.Prestamo>

@{
    ViewData["Title"] = "Lista de Devoluciones";
}

<h2 class="mb-4 fw-bold">Lista de Devoluciones</h2>

<a asp-action="Index" class="btn btn-secondary mb-3">← Volver a Préstamos Activos</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Herramienta</th>
            <th>Trabajador</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Devolución</th>
            <th>Estado</th>
            <th>Observación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Herramienta?.Nombre (@item.Herramienta?.CodigoInterno)</td>
                <td>@item.Trabajador?.Nombres</td>
                <td>@item.FechaPrestamo.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.FechaDevolucion?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <span class="badge bg-success">Devuelto</span>
                </td>
                <td>@item.Observacion</td>
            </tr>
        }
    </tbody>
</table>
