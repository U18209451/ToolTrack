@model IEnumerable<ToolTrack.Domain.Entities.Herramienta>

@{
    ViewData["Title"] = "Lista de Herramientas";
}

<h2 class="mb-4 fw-bold">Lista de Herramientas</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Registrar Nueva Herramienta</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Código Interno</th>
            <th>Estado</th>
            <th style="width: 220px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.CodigoInterno</td>
                <td>@item.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdHerramienta" class="text-primary text-decoration-none">Editar</a>
                    |
                    <a asp-action="Details" asp-route-id="@item.IdHerramienta" class="text-info text-decoration-none">Detalles</a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.IdHerramienta" class="text-danger text-decoration-none">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
